
::-webkit-scrollbar
  width 6px
  height 6px
::-webkit-scrollbar-track
  border-radius 4px
  box-shadow inset 0 0 6px rgba(0, 0, 0, .1)
::-webkit-scrollbar-thumb
  border-radius 4px
  background rgba(0, 0, 0, .4)
::-webkit-scrollbar-thumb:window-inactive
  background rgba(0, 0, 0, .3)

.q-scrollarea-thumb
  width 4px
  border-radius 4px
